<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculusApp.MainPage"
             xmlns:viewModels="clr-namespace:CalculusApp.ViewModels"
             x:DataType="viewModels:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <HorizontalStackLayout>
                <RadioButton x:Name="Derive"
                             Content="Derive"
                             IsChecked="{Binding IsDeriveChecked}"
                             GroupName="OperatorType" />
                <RadioButton x:Name="Integrate"
                             Content="Integrate"
                             IsChecked="{Binding IsIntegrateChecked}"
                             GroupName="OperatorType" />
                <RadioButton x:Name="Factor"
                             Content="Factor"
                             IsChecked="{Binding IsFactorChecked}"
                             GroupName="OperatorType" />
                <RadioButton x:Name="Simplify"
                             Content="Simplify"
                             IsChecked="{Binding IsSimplifyChecked}"
                             GroupName="OperatorType" />
            </HorizontalStackLayout>
            <Label
                Text="Calculate!"
                Style="{StaticResource Headline}">
            </Label>
            <Label
                Text="Hint: Be good!"
                Style="{StaticResource SubHeadline}">
            </Label>
            <Entry x:Name="FirstTextField"
                   Placeholder="Expression here"
                   Text="{Binding Expression}">
            </Entry>
            <Label x:Name="FirstResult"
                   Text="{Binding Solution}">
            </Label>
            <Button
                x:Name="CounterBtn"
                Text="Hit me" 
                HorizontalOptions="Fill"
                Command="{Binding NewtonClickedCommand}">
            </Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
